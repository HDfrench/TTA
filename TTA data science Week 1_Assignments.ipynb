    "            if gnb in range(1,11):\n",
    "                if rndnb == gnb:\n",
    "                    print(\"Awesome {0}! You guessed right\".format(username))\n",
    "                else:\n",
    "                    print(\"Nice try {0}, but my number was {1}\".format(username, rndnb))\n",
    "                break\n",
    "        except:\n",
